<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/RecyclerViewlayouttypebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Layout manager type" />

    <Button
        android:id="@+id/RecyclerViewCustomlayoutManagerbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Custom Layout Manager" />

    <Button
        android:id="@+id/RecyclerViewItemAnimatorbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Recycler View ItemAnimator" />

    <Button
        android:id="@+id/RecyclerViewPaggingbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="RecyclerView Pagging" />

    <Button
        android:id="@+id/RecyclerViewLargDatabtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="RecyclerView Larg Data" />

</LinearLayout>