<?xml version="1.0" encoding="utf-8"?>
<com.son.jawad.tutoriallibrary.AnimationViews.Reveals.widget.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:id="@+id/activator"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/md_margin"
        android:layout_marginRight="@dimen/md_margin"
        android:onClick="onClick"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp" />
</com.son.jawad.tutoriallibrary.AnimationViews.Reveals.widget.RevealFrameLayout>