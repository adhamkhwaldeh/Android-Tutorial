<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerStyle">@style/AppTheme.MySppinner</item>
        <item name="android:ratingBarStyle">@style/AppTheme.MyRatingBar</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.WithActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.WithActionBar2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="AppTheme.MyTextview" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:layout_margin">@dimen/md_margin</item>
        <item name="android:textColor">@color/lightgray</item>
    </style>

    <style name="AppTheme.MyTextViewSmall" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:layout_margin">@dimen/md_margin</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.MySppinner" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_margin">8dp</item>
        <item name="background">@android:color/white</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="AppTheme.MyRatingBar" parent="Base.Widget.AppCompat.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:editable">true</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="AppTheme.MyRatingBar.Small" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
        <item name="android:editable">true</item>
        <item name="android:isIndicator">false</item>
        <item name="android:layout_margin">@dimen/md_margin</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


</resources>
